<div class="diary-contents">
 <header class="diary-header">
  <h1 class="top-page-header">My Diary</h1>
   <ul class='header-lists'>
      <% if user_signed_in? %>
      <li class="user-nickname"><%= current_user.nickname %></li> 
      <li><%= link_to 'log out', destroy_user_session_path, method: :delete, class: "logout"  %></li>
      <li class="chat-btn">chat room</li>
      <li class="commnication-btn">communication</li>
      <li><%= link_to 'new diary', new_diary_path, class:"create-btn" %></li>
      <% end %>
    </ul>
 </header>

 <div class="main">
  <%= month_calendar(start_date_param: :my_date, events: @diaries) do |date, diaries| %>
   <%= date.day %>
   <% diaries.each do |diary| %>
   <% if current_user.id == diary.user_id %>
    <%= link_to diary_path(diary.id) do %>
    <div>
     <%= image_tag diary.image, class:"img" %></div>
    <% end %>
   <% end %>
   <% end %>
  <% end %>
 </div>
</div>

